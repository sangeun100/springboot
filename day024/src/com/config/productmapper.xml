<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.ProductMapper">
	
	<select id="select" parameterType="Integer" resultType="product">
		SELECT * FROM PRODUCT WHERE ID=#{obj}
	</select>
	<select id="selectall" resultType="product">
		SELECT * FROM PRODUCT
	</select>
	<insert id="insert" parameterType="product">
		INSERT INTO PRODUCT VALUES (null,#{name},#{price},#{sysdate},#{rate})
	</insert>
	<update id="update" parameterType="products">
		UPDATE PRODUCT SET PRICE=#{price},RATE=#{rate} WHERE ID=#{name}
	</update>
	<delete id="delete" parameterType="Integer">
		DELETE FROM PRODUCT WHERE ID=#{obj}
	</delete>
	
</mapper>






