<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.ProductMapper">
	
	<select id="select" parameterType="String" resultType="product">
		SELECT * FROM PRODUCT WHERE ID=#{obj}
	</select>
	<select id="selectall" resultType="user">
		SELECT * FROM PRODUCT
	</select>
	<insert id="insert" parameterType="user">
		INSERT INTO PRODUCT VALUES (#{id},#{name},#{price},#{SYSDATE()},#{rate})
	</insert>
	<update id="update" parameterType="user">
		UPDATE PRODUCT SET ID=#{id},#{price},#{SYSDATE()},#{rate} WHERE NAME=#{name}
	</update>
	<delete id="delete" parameterType="String">
		DELETE FROM PRODUCT WHERE ID=#{obj}
	</delete>
	
</mapper>






